{
  "manifest_version": 2,

  "name": "Spam-scout",
  "description": "Keeps you from spam and Phishing website based on your community.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab",
   "http://*/*",
   "https://*",
   "http://*",
   "https://*"
  ],
  "content_scripts":[
    {
      "matches": ["https://*/*","http://*/*"],
      "js":["myscript.js"]
    }
  ]
  
}
